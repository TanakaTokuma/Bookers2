<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/template', book: @book, user: @user %>

    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @post_users.each do |post_user| %>
          <tr>
            <td>
              <%= link_to user_path(post_user.user_id) do %>
                <%= image_tag post_user.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <%= link_to post_user.title, book_path(post_user.id) %>
            </td>
            <td>
              <%= post_user.body %>
            </td>
          </tr>
          <% end %>
        </tbody>


      </table>
    </div>

  </div>

</div>