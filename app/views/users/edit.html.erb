<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="form-group">
        <%= form_with model: @user do |f| %>
         <label for="inputName">Name</label><br>
         <%= f.text_field :name, class: 'form-control name' %><br>
         <label for="inputImage">Image</label><br>
         <%= f.file_field :profile_image, accept: "image/*" %><br>
         <label for="inputIntroduction">Introduction</label><br>
         <%= f.text_field :introduction, class: 'form-control introduction' %><br>
         <%= f.submit "Update User", class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>



