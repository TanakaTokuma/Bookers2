<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div id="error_explanation">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorが発生しました
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :title, class: 'form-control title' %>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body, class: 'form-control body' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Update Book', class: 'btn btn-success' %>
        </div>

        <% end %>

        <%= link_to "Show", book_path(@book.id) %>
         |
        <%= link_to "Back", "/books" %>


    </div>
  </div>
</div>